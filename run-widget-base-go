DOCKER_IP=`ifconfig | grep "inet " | grep -Fv 127.0.0.1 | awk '{print $2}'`

docker run -d --rm \
--volume "$(pwd)"/widget:/go/src/widget:rw \
-e "PUBLIC_KEY=public-key" \
-e "PRIVATE_KEY=private-key" \
-e "BASE_URL=http://$DOCKER_IP" \
-e "WIDGET_URL_PREFIX=/ic/widget4/" \
-e "PROTO=http://" \
--name=layout-widget \
-p 8094:8080 \
layout-widget:ko

#layout-widget:latest
