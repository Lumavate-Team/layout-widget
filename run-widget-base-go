-e "PUBLIC_KEY=mIhuoMJh0jbA5W4pUUNK" \
-e "PRIVATE_KEY=LXycaMpw5BzgfhsS4ydNxGzJ36qMnPrQHI8u2x3wQCZCZyGtZ4sOQbkEWnHmVchZEa79a0Y3xK7IKCymSLkugyabbJUGuXfyuoKL" \
-e "BASE_URL=http://$DOCKER_IP" \
